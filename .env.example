# Application Configuration
APP_NAME=Gamdl
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your_very_secret_key_here
APP_TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_FILE_PATH=/app/logs/gamdl.log

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/callback

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Download Configuration
DOWNLOAD_BASE_PATH=/app/downloads
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_QUALITY=highest
DOWNLOAD_TIMEOUT=300

# Audio Conversion Settings
AUDIO_BITRATE=320k
AUDIO_FORMAT=mp3
NORMALIZE_AUDIO=true

# Metadata Configuration
METADATA_WRITE_TAGS=true
METADATA_COVER_ART=true
METADATA_CUSTOM_TEMPLATE={artist} - {title}

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram-webhook

# Proxy Settings
PROXY_ENABLED=false
PROXY_TYPE=socks5
PROXY_HOST=127.0.0.1
PROXY_PORT=9150
PROXY_USERNAME=
PROXY_PASSWORD=

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:password@localhost/gamdl
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/123456

# External Services
GENIUS_API_KEY=your_genius_lyrics_api_key
LAST_FM_API_KEY=your_lastfm_api_key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Notification Settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# Feature Flags
FEATURE_LYRICS_DOWNLOAD=true
FEATURE_PLAYLIST_SYNC=true
FEATURE_BACKUP_METADATA=true

# Machine Learning (Optional)
ML_RECOMMENDATION_ENABLED=false
ML_MODEL_PATH=/app/models/recommendation.pkl

# Performance Monitoring
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_PATH=/app/backups

# Experimental Features
EXPERIMENTAL_AUDIO_FINGERPRINTING=false
EXPERIMENTAL_ML_TAGGING=false
